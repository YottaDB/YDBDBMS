load test_helpers

setup() {
  init_test
  createdb
  load_fixture names.sql
  load_fixture names.zwr
}

replace_release() {
  sed -i 's/r[0-9]\.[0-9][0-9]/RELEASE/' output.txt
}

@test "TH000 : call octo with -h" {
  octo -h >& output.txt
  verify_output TH000 output.txt noinfo nodebug
}

@test "TH001 : call octo with --help" {
  octo --help >& output.txt
  verify_output TH001 output.txt noinfo nodebug
}

@test "TH002 : call octo with invalid option" {
  octo -g >& output.txt || true
  verify_output TH002 output.txt noinfo nodebug
}

@test "TH003 : call rocto with -h" {
  rocto -h >& output.txt
  verify_output TH003 output.txt noinfo nodebug
}

@test "TH004 : call rocto with --help" {
  rocto --help >& output.txt
  verify_output TH004 output.txt noinfo nodebug
}

@test "TH005 : call rocto with invalid option" {
  rocto -g >& output.txt || true
  verify_output TH005 output.txt noinfo nodebug
}

@test "TH006 : call rocto with -f option (invalid)" {
  rocto -f >& output.txt || true
  verify_output TH006 output.txt noinfo nodebug
}

@test "TH007 : call rocto with -d option (invalid)" {
  rocto -d >& output.txt || true
  verify_output TH007 output.txt noinfo nodebug
}

@test "TH008 : call octo with -r option" {
  octo -r >& output.txt
  replace_release
  verify_output TH008 output.txt noinfo nodebug
}

@test "TH009 : call octo with --version option" {
  octo --version >& output.txt
  replace_release
  verify_output TH008 output.txt noinfo nodebug
}

@test "TH010 : call octo with --release option" {
  octo --release >& output.txt
  replace_release
  verify_output TH008 output.txt noinfo nodebug
}

@test "TH011 : call rocto with -r option" {
  rocto -r >& output.txt
  replace_release
  verify_output TH009 output.txt noinfo nodebug
}

@test "TH012 : call rocto with --version option" {
  rocto --version >& output.txt
  replace_release
  verify_output TH009 output.txt noinfo nodebug
}

@test "TH013 : call rocto with --release option" {
  rocto --release >& output.txt
  replace_release
  verify_output TH009 output.txt noinfo nodebug
}
