load test_helpers

setup() {
  init_test
  createdb
  load_fixture names.sql
  load_fixture names.zwr
}

@test "invalid Octo GLD" {
  export ydb_gbldir="does_not_exist.gld"
  run octo <<OCTO
SELECT * FROM names WHERE lastName = "Cool";
OCTO
  [[ "$output" =~ "ZGBLDIRACC" ]]
}
