load test_helpers

setup() {
  init_test
  createdb
  load_fixture names.sql
  load_fixture names.zwr
  start_rocto
}

teardown() {
  stop_rocto
}

@test "test psql authentication with bad password" {
  run_psql <<OCTO &> output.txt
SELECT * FROM names;
OCTO
  [[ "$(grep -c -E "Zero.\+|Cool" output.txt)" == "2" ]]
}

@test "test psql authentication with non-existent user" {
  run_psql <<OCTO &> output.txt
